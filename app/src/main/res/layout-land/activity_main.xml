<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:padding="12dp"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="260dp" android:layout_height="match_parent"
        android:layout_marginEnd="12dp">

        <TextView android:id="@+id/salutation"
            android:text="Welcome to Mobile Platform Development"
            android:textSize="18sp"
            android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <Button android:id="@+id/startButton"
            android:text="Press to get data"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_marginTop="8dp"/>

        <!-- inside the left controls LinearLayout, right after startButton -->
        <TextView
            android:text="Majors"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"/>

        <LinearLayout
            android:id="@+id/majorsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/majorUsd"
                android:text="USD: --"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/majorUsdSub"
                android:text="Tap to convert"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/majorEur"
                android:text="EUR: --"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"/>

            <TextView
                android:id="@+id/majorEurSub"
                android:text="Tap to convert"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/majorJpy"
                android:text="JPY: --"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"/>

            <TextView
                android:id="@+id/majorJpySub"
                android:text="Tap to convert"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <TextView android:id="@+id/acknowledgement"
            android:text="Contains Fx Currency Exchange data"
            android:textSize="16sp"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_marginTop="8dp"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="0dp" android:layout_height="match_parent"
        android:layout_weight="1">
        <TextView android:id="@+id/rawDataDisplay"
            android:textSize="16sp"
            android:layout_width="match_parent" android:layout_height="wrap_content"/>
    </ScrollView>
</LinearLayout>
