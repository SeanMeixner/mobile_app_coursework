<?xml version="1.0" encoding="utf-8"?>
<!-- Landscape layout: Dashboard on left, preview pane on right -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="#FAFAFA"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- LEFT SIDE: Dashboard controls -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingEnd="12dp">

        <TextView
            android:id="@+id/salutation"
            android:text="Currency Dashboard"
            android:textStyle="bold"
            android:textSize="22sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp" />

        <!-- Refresh button (full width) -->
        <Button
            android:id="@+id/startButton"
            android:text="View all rates"
            android:textAllCaps="false"
            android:maxLines="1"
            android:ellipsize="end"
            android:minHeight="48dp"
            android:minWidth="240dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Last updated chip under the button -->
        <TextView
            android:id="@+id/lastUpdatedChip"
            android:text="@string/majors_hint"
            android:padding="6dp"
            android:textSize="12sp"
            android:background="@drawable/bg_card"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Majors vertically stacked for landscape -->
        <LinearLayout
            android:id="@+id/majorsContainer"
            android:orientation="vertical"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- USD -->
            <LinearLayout
                android:id="@+id/cardUsd"
                android:orientation="horizontal"
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@drawable/bg_card"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/flagUsd"
                    android:layout_width="24dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/flag_us"
                    android:contentDescription="USD Flag" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/majorUsd"
                        android:text="USD"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/majorUsdRate"
                        android:text="--"
                        android:textSize="14sp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        app:autoSizeTextType="uniform"
                        app:autoSizeMinTextSize="10sp"
                        app:autoSizeMaxTextSize="14sp"
                        app:autoSizeStepGranularity="1sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/majorUsdSub"
                        android:text=""
                        android:textSize="11sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>

            <!-- EUR -->
            <LinearLayout
                android:id="@+id/cardEur"
                android:orientation="horizontal"
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@drawable/bg_card"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/flagEur"
                    android:layout_width="24dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/flag_eu"
                    android:contentDescription="EUR Flag" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/majorEur"
                        android:text="EUR"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/majorEurRate"
                        android:text="--"
                        android:textSize="14sp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        app:autoSizeTextType="uniform"
                        app:autoSizeMinTextSize="10sp"
                        app:autoSizeMaxTextSize="14sp"
                        app:autoSizeStepGranularity="1sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/majorEurSub"
                        android:text=""
                        android:textSize="11sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>

            <!-- JPY -->
            <LinearLayout
                android:id="@+id/cardJpy"
                android:orientation="horizontal"
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_card"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/flagJpy"
                    android:layout_width="24dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/flag_jp"
                    android:contentDescription="JPY Flag" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/majorJpy"
                        android:text="JPY"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/majorJpyRate"
                        android:text="--"
                        android:textSize="14sp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        app:autoSizeTextType="uniform"
                        app:autoSizeMinTextSize="10sp"
                        app:autoSizeMaxTextSize="14sp"
                        app:autoSizeStepGranularity="1sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/majorJpySub"
                        android:text=""
                        android:textSize="11sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/acknowledgement"
            android:text="@string/acknowledgement_text"
            android:textSize="14sp"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <!-- RIGHT SIDE: Preview card -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingStart="12dp"
        android:background="@drawable/bg_card"
        android:padding="12dp">

        <TextView
            android:text="@string/preview_header"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/rawDataDisplay"
            android:fontFamily="sans-serif"
            android:textSize="14sp"
            android:lineSpacingExtra="4dp"
            android:textColor="#333333"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="" />
    </LinearLayout>
</LinearLayout>
