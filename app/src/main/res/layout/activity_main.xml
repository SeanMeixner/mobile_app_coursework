<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA">

    <!-- Top app bar consistent with Converter/All Rates -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/mainToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.Material3.Dark.ActionBar"
        app:title="Currency Dashboard" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/startButton"
                android:text="Refresh / View All Rates"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

        </LinearLayout>

        

        <!-- Majors: three tappable cards -->

        <TextView
            android:id="@+id/lastUpdatedChip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:background="@drawable/bg_card"
            android:paddingLeft="10dp"
            android:paddingTop="6dp"
            android:paddingRight="10dp"
            android:paddingBottom="6dp"
            android:text="@string/majors_hint"
            android:textSize="12sp" />

        <LinearLayout
            android:id="@+id/majorsContainer"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardUsd"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="12dp"
                app:cardElevation="3dp"
                app:strokeColor="#1F000000"
                app:strokeWidth="1dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" android:layout_marginEnd="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <ImageView
                        android:id="@+id/flagUsd"
                        android:layout_width="24dp"
                        android:layout_height="16dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="8dp"
                        android:contentDescription="@string/cd_flag"
                        android:src="@drawable/flag_us" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/majorUsd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="USD"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:maxLines="1"
                            android:ellipsize="end" />

                        <TextView
                            android:id="@+id/majorUsdRate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:textSize="14sp"
                            android:maxLines="1"
                            android:ellipsize="end"
                            app:autoSizeTextType="uniform"
                            app:autoSizeMinTextSize="10sp"
                            app:autoSizeMaxTextSize="14sp"
                            app:autoSizeStepGranularity="1sp" />

                        <TextView
                            android:id="@+id/majorUsdSub"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="11sp"
                            android:maxLines="1"
                            android:ellipsize="end" />
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <Space
                android:layout_width="8dp"
                android:layout_height="0dp"/>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardEur"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="12dp"
                app:cardElevation="3dp"
                app:strokeColor="#1F000000"
                app:strokeWidth="1dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" android:layout_marginStart="8dp" android:layout_marginEnd="8dp">
                <LinearLayout
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/flagEur"
                        android:layout_width="24dp"
                        android:layout_height="16dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/flag_eu"
                        android:contentDescription="@string/cd_flag" />
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/majorEur"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="EUR"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:maxLines="1"
                            android:ellipsize="end"/>
                        <TextView
                            android:id="@+id/majorEurRate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:textSize="14sp"
                            android:maxLines="1"
                            android:ellipsize="end"
                            app:autoSizeTextType="uniform"
                            app:autoSizeMinTextSize="10sp"
                            app:autoSizeMaxTextSize="14sp"
                            app:autoSizeStepGranularity="1sp"/>
                        <TextView
                            android:id="@+id/majorEurSub"
                            android:text=""
                            android:textSize="11sp"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <Space
                android:layout_width="8dp"
                android:layout_height="0dp"/>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardJpy"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="12dp"
                app:cardElevation="3dp"
                app:strokeColor="#1F000000"
                app:strokeWidth="1dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" android:layout_marginStart="8dp">
                <LinearLayout
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/flagJpy"
                        android:layout_width="24dp"
                        android:layout_height="16dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/flag_jp"
                        android:contentDescription="@string/cd_flag" />
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/majorJpy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="JPY"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:maxLines="1"
                            android:ellipsize="end"/>
                        <TextView
                            android:id="@+id/majorJpyRate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:textSize="14sp"
                            android:maxLines="1"
                            android:ellipsize="end"
                            app:autoSizeTextType="uniform"
                            app:autoSizeMinTextSize="10sp"
                            app:autoSizeMaxTextSize="14sp"
                            app:autoSizeStepGranularity="1sp"/>
                        <TextView
                            android:id="@+id/majorJpySub"
                            android:text=""
                            android:textSize="11sp"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <!-- Acknowledgement -->
        <TextView
            android:id="@+id/acknowledgement"
            android:text="@string/acknowledgement_text"
            android:textSize="14sp"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Preview box -->
        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/bg_card"
            android:padding="12dp"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/preview_header"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/rawDataDisplay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="4dp"
                android:textColor="#333333"
                android:text=""
                android:textSize="14sp" />
        </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
